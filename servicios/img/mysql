CREATE TABLE ALUMNOS(
	UUID VARCHAR(100) NOT NULL,
	CLAVE INT NOT NULL,  
	CARRERA VARCHAR(100) NOT NULL,  
	NOMBRE VARCHAR(100) NOT NULL,  
	APELLIDO_PATERNO VARCHAR(100),  
	APELLIDO_MATERNO VARCHAR(100),
	ESTATUS BOOLEAN
);  


CREATE TABLE USUARIO(
	iD_USUARIO VARCHAR(100) NOT NULL,
	NOMBRE_USUARIO VARCHAR(100) NOT NULL,  
	CONTRASENA VARCHAR(100) NOT NULL,  
	FECHA_CREACION_ALTA VARCHAR(100) NOT NULL,  
	FECHA_MODIFICACION VARCHAR(100),  
	ESTATUS INT
);

CREATE TABLE MERGE_SERV_ALUM(
	UUID VARCHAR(250) NOT NULL,
	AUUID VARCHAR(250) NOT NULL,
	ACLAVE VARCHAR(100) NOT NULL,  
	ACARRERA VARCHAR(250) NOT NULL,  
	ANOMBRE VARCHAR(250) NOT NULL,  
	SCLAVE VARCHAR(100),  
	SNOMBRE VARCHAR(250),
	SCOSTO FLOAT,
	FECHA_CREACIÓN DATE
); 

CREATE TABLE SERVICIOS(
	UUID VARCHAR(250) NOT NULL,
	CLAVE VARCHAR(250) NOT NULL,
	NOMBRE VARCHAR(100) NOT NULL,  
	DESCRIPCION VARCHAR(250) NOT NULL,  
	COSTO FLOAT NOT NULL,  
	FECHA_CREACION DATE NOT NULL,  
	FECHA_MODIFICACION DATE NOT NULL,
	ESTATUS INT
); 

